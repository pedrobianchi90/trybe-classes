const oddsAndEvens = [13, 3, 4, 10, 7, 2];

const sortNumbersFunction = (numbers) => {
  let sortedNumbers = numbers.sort(function (a, b) {
    return a - b;
  });
  return sortedNumbers;
}

console.log(`Os números ${sortNumbersFunction(oddsAndEvens)} se encontram ordenados de forma crescente!`);